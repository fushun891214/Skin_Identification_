<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <ImageView
        android:id="@+id/result_bg_01"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        app:layout_constraintBottom_toTopOf="@+id/result_bg_02"
        app:layout_constraintTop_toTopOf="@+id/result_app_logo"
        app:layout_constraintVertical_bias="0.0"
        android:background="#939393"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="-184dp" />

    <ImageView
        android:id="@+id/result_bg_02"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="parent"
        app:srcCompat="@drawable/result_bg_02"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="0dp" />

    <TextView
        android:id="@+id/result_textview1"
        android:layout_width="213dp"
        android:layout_height="54dp"
        android:gravity="center"
        android:text="尿布疹"
        android:textColor="#000000"
        android:textSize="100px"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.748" />

    <ImageView
        android:id="@+id/result_app_logo"
        android:layout_width="313dp"
        android:layout_height="105dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.491"
        app:layout_constraintStart_toStartOf="@+id/result_bg_01"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/result_app_logo"
        tools:ignore="MissingConstraints" />

    <ImageView
        android:id="@+id/result_display"
        android:layout_width="271dp"
        android:layout_height="270dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.316"
        app:srcCompat="@drawable/result_display"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/result_textview2"
        android:layout_width="132dp"
        android:layout_height="32dp"
        android:gravity="center"
        android:text="Diaper rash"
        android:textColor="#939393"
        android:textSize="50px"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/result_app_logo"
        app:layout_constraintVertical_bias="0.802"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/result_textview3"
        android:layout_width="392dp"
        android:layout_height="46dp"
        android:gravity="center"
        android:text="嬰幼兒尿布所覆蓋部位的皮膚，因刺激或其他原因而引起的皮膚發炎反應所長出的紅疹。"
        android:textColor="#000000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.473"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.865"
        tools:ignore="MissingConstraints" />

    <ImageButton
        android:id="@+id/result_button"
        android:layout_width="88dp"
        android:layout_height="50dp"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.894"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.976"
        app:srcCompat="@drawable/result_button"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/result_textview4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="辨識日期:2022/06/22"
        android:textColor="#000000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.058"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/result_app_logo"
        app:layout_constraintVertical_bias="0.96"
        tools:ignore="MissingConstraints" />

</androidx.constraintlayout.widget.ConstraintLayout>